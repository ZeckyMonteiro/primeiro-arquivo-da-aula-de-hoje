/* Crie um algoritmo que leia dois números e calcule a média.*/
programa {
  funcao inicio() {
    
    real numero1, numero2, media
    escreva("digite o primeiro número:")
    leia(numero1)
    escreva("digire o segundo número:")
    leia(numero2)
    media = (numero1 + numero2) / 2
    escreva("a média dois dois numeros é:", media)
     
  }
}
